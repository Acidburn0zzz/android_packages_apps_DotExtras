<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/component_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dotos.dotextras.system_manager.components.MainComponent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <android.support.v7.widget.CardView
            android:id="@+id/phn_inf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_below="@+id/textView8"
                    app:srcCompat="@color/cardview_shadow_start_color" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:padding="9dp"
                    android:text="@string/phone_info"
                    android:textColor="?attr/textColorTitles"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView8">

                    <ImageButton
                        android:id="@+id/expand_more_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/expand_less_info"
                        android:background="@android:color/transparent"
                        android:paddingEnd="6dp"
                        android:scaleType="fitEnd"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_expand_more" />

                    <ImageButton
                        android:id="@+id/expand_less_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:paddingEnd="6dp"
                        android:scaleType="fitEnd"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_expand_less" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/expand_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imageView23"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/android_ver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_androidver"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:padding="6dp"
                                    android:text="@string/android_ver"
                                    android:textColor="?attr/textColorTitles"
                                    android:textSize="14sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sdk_ver"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/android_ver"
                                android:clickable="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_sdk_ver"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:padding="6dp"
                                    android:text="@string/sdk_ver"
                                    android:textColor="?attr/textColorTitles"
                                    android:textSize="14sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/chipset"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/sdk_ver"
                                android:clickable="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_chip"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_weight="1"
                                    android:padding="6dp"
                                    android:text="@string/chipset"
                                    android:textColor="?attr/textColorTitles"
                                    android:textSize="14sp"
                                    android:textStyle="italic" />
                            </LinearLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/preset_tweaks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/phn_inf"
            android:layout_marginTop="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/title"
                    android:paddingBottom="5dp"
                    android:paddingStart="9dp"
                    android:text="@string/main_desc" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingEnd="9dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingStart="9dp"
                    android:paddingTop="9dp"
                    android:text="@string/control_center"
                    android:textColor="?attr/textColorTitles"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/spacer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView13">

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        app:srcCompat="@color/cardview_shadow_start_color" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/spacer">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/custom_profiles"
                        android:textColor="?attr/textColorTitles"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView12"
                        android:layout_below="@+id/textView12"
                        android:text="@string/back" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/radioButton3"
                        android:layout_below="@+id/radioButton3"
                        android:text="@string/supercar" />

                    <RadioButton
                        android:id="@+id/radioButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/radioButton4"
                        android:layout_below="@+id/radioButton4"
                        android:text="@string/lazy" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/radioButton5"
                        android:layout_below="@+id/radioButton5"
                        android:text="@string/custom_profiles"
                        android:textColor="?attr/textColorTitles"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView17"
                        android:layout_below="@+id/textView17"
                        android:padding="10dp"
                        android:text="@string/wip"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>
